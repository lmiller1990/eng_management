<%= form_with(model: [@meeting, action_item], class: "space-y-4") do |form| %>
  <% if action_item.errors.any? %>
    <div class="alert alert-error">
      <div>
        <h2 class="font-bold"><%= pluralize(action_item.errors.count, "error") %> prohibited this action_item from being saved:</h2>
        <ul class="list-disc ml-6 mt-2">
          <% action_item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-control">
    <%= form.label :title, class: "label" %>
    <%= form.text_field :title, class: "input input-bordered w-full #{action_item.errors[:title].any? ? 'input-error' : ''}" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
