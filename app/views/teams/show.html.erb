<% content_for :title, @team.name %>

<div class="w-full">
  <% if notice.present? %>
    <div class="alert alert-success mb-5">
      <span><%= notice %></span>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="alert alert-error mb-5">
      <span><%= alert %></span>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-4xl font-bold"><%= @team.name %></h1>
      <% if @team.description.present? %>
        <p class="text-lg opacity-70 mt-2"><%= @team.description %></p>
      <% end %>
    </div>
    <% membership = @team.team_memberships.find_by(account: current_account) %>
    <% if membership&.admin? || membership&.owner? %>
      <%= link_to "Edit team", edit_team_path(@team), class: "btn btn-ghost btn-sm" %>
    <% end %>
  </div>
  <!-- Team Members -->
  <div class="flex justify-between items-center mb-4">
    <h2 class="font-bold text-2xl">Team Members (<%= @team_memberships.count %>)</h2>
  </div>

  <div class="overflow-x-auto mb-6">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Member</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody data-testid="team-members">
        <% @team_memberships.each do |membership| %>
          <tr>
            <th><%= membership.account.id %></th>

            <td>
              <div class="font-medium"><%= membership.account.email %></div>
            </td>

            <td>
              <% if membership.owner? %>
                <span class="badge badge-primary badge-sm">Owner</span>
              <% elsif membership.admin? %>
                <span class="badge badge-secondary badge-sm">Admin</span>
              <% else %>
                <span class="badge badge-ghost badge-sm">Member</span>
              <% end %>
            </td>

            <td>
              <div class="flex flex-wrap gap-2">
                <% if @current_membership&.owner? && membership.account != current_account %>
                  <%= link_to "View Notes",
                  team_member_path(@team, membership.account),
                  class: "btn btn-sm btn-ghost" %>
                <% elsif !@current_membership&.owner? && membership.owner? %>
                  <%= link_to "View Notes",
                  team_member_path(@team, current_account),
                  class: "btn btn-sm btn-ghost" %>
                <% end %>

                <% if membership.account.current_rubric && (@current_membership.owner? || member.account == current_account) %>
                  <%= link_to "Rubric",
                  edit_account_rubric_evaluation_path(
                    membership.account,
                    membership.account.current_rubric,
                  ),
                  class: "btn btn-sm btn-info" %>
                <% end %>

                <% can_remove =
                  (@current_membership&.admin? || @current_membership&.owner?) ||
                    membership.account == current_account %>
                <!--
                <% if can_remove && membership.account != current_account %>
                  <%= button_to "Remove Team Member",
                  team_membership_path(@team, membership),
                  method: :delete,
                  class: "btn btn-sm btn-error",
                  data: {
                    turbo_confirm: ("Are you sure you want to remove this member?"),
                  } %>
                <% end %>
                -->
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="divider"></div>
  <!-- Invite Member Form -->
  <div class="flex justify-between items-center mb-4">
    <h2 class="font-bold text-2xl">Invite Member</h2>
  </div>

  <%= form_with model: TeamInvitation.new, url: team_invitations_path(@team), method: :post, class: "flex gap-2 mb-2" do |form| %>
    <%= form.email_field :email,
                     placeholder: "Email address",
                     required: true,
                     class: "input input-bordered flex-1 input-sm" %>
    <%= form.submit "Send Invite", class: "btn btn-primary btn-sm" %>
  <% end %>

  <p class="text-sm opacity-70 mb-6">
    If the user already has an account, they'll be added immediately.
    Otherwise, we'll send them an email invitation.
  </p>

  <% if @pending_invitations.any? %>
    <div class="divider"></div>

    <div class="flex justify-between items-center mb-4">
      <h2 class="font-bold text-2xl">Pending Invitations (<%= @pending_invitations.count %>)</h2>
    </div>

    <div class="overflow-x-auto mb-6">
      <table class="table" data-testid="pending-invites">
        <thead>
          <tr>
            <th></th>
            <th>Email</th>
            <th>Invited</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @pending_invitations.each_with_index do |invitation, index| %>
            <tr>
              <th><%= index + 1 %></th>

              <td>
                <div class="font-medium"><%= invitation.email %></div>
              </td>

              <td>
                <div class="text-sm opacity-70">
                  <span class="opacity-70">by</span>
                  <%= invitation.inviter.email %>
                  <span class="opacity-70">Â·</span>
                  <%= time_ago_in_words(invitation.created_at) %>
                  ago
                </div>
              </td>

              <td>
                <% if invitation.expired? %>
                  <span class="badge badge-error badge-sm">Expired</span>
                <% else %>
                  <span class="text-sm opacity-70">
                    Expires
                    <%= time_ago_in_words(invitation.expires_at) %>
                    from now
                  </span>
                <% end %>
              </td>

              <td>
                <% if @current_membership.owner? %>
                  <%= link_to "View Notes",
                  team_member_path(@team, invitation.invitee),
                  class: "btn btn-sm btn-ghost" %>
                <% end %>

                <%= button_to "Cancel",
                team_invitation_path(@team, invitation),
                method: :delete,
                class: "btn btn-sm btn-ghost",
                data: {
                  turbo_confirm: "Are you sure you want to cancel this invitation?",
                } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
