<%= form_with url: rodauth.create_account_path, method: :post, data: { turbo: false }, class: "w-full max-w-sm space-y-4" do |form| %>
  <div class="form-control">
    <%= form.email_field rodauth.login_param, value: params[rodauth.login_param], id: "login", autocomplete: "email", required: true, placeholder: "Work email", class: "input input-bordered w-full #{rodauth.field_error(rodauth.login_param) ? 'input-error' : ''}", aria: ({ invalid: true, describedby: "login_error_message" } if rodauth.field_error(rodauth.login_param)) %>
    <%= content_tag(:span, rodauth.field_error(rodauth.login_param), class: "label-text-alt text-error", id: "login_error_message") if rodauth.field_error(rodauth.login_param) %>
  </div>

  <% if rodauth.create_account_set_password? %>
    <div class="form-control">
      <%= form.password_field rodauth.password_param, value: "", id: "password", autocomplete: rodauth.password_field_autocomplete_value, required: true, placeholder: "Password", class: "input input-bordered w-full #{rodauth.field_error(rodauth.password_param) ? 'input-error' : ''}", aria: ({ invalid: true, describedby: "password_error_message" } if rodauth.field_error(rodauth.password_param)) %>
      <%= content_tag(:span, rodauth.field_error(rodauth.password_param), class: "label-text-alt text-error", id: "password_error_message") if rodauth.field_error(rodauth.password_param) %>
    </div>

  <% end %>

  <%= form.submit rodauth.create_account_button, class: "btn btn-primary w-full" %>
<% end %>
