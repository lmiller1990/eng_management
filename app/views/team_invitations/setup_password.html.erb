<% @page_title = "Set Your Password" %>

<p class="text-center mb-6">Set a password to join
  <strong><%= @invitation.team.name %></strong></p>

<%= form_with url: complete_setup_team_invitation_path(token: @invitation.token), method: :post, data: { turbo: false }, class: "w-full space-y-4" do |form| %>
  <div class="form-control">
    <%= form.label :password, "Password", class: "label" %>
    <%= form.password_field :password,
                        autocomplete: "new-password",
                        required: true,
                        placeholder: "Enter your password",
                        class:
                          "input input-bordered w-full #{@error ? "input-error" : ""}" %>
    <% if @error %>
      <label class="label">
        <span class="label-text-alt text-error"><%= @error %></span>
      </label>
    <% end %>
    <label class="label">
      <span class="label-text-alt">Minimum 8 characters</span>
    </label>
  </div>

  <%= form.submit "Set Password & Join Team", class: "btn btn-primary w-full" %>
<% end %>
