<% content_for :title, "1-on-1 Notes: #{@member.email}" %>

<div class="w-full">
  <% if notice.present? %>
    <div class="alert alert-success mb-5">
      <span><%= notice %></span>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="alert alert-error mb-5">
      <span><%= alert %></span>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">1-on-1 Notes:
        <%= @member.email %></h1>
      <p class="text-lg opacity-70 mt-1">Team:
        <%= @team.name %></p>
    </div>
    <%= link_to "Back to Team", team_path(@team), class: "btn btn-ghost btn-sm" %>
  </div>

  <div class="w-full flex flex-col items-center">
    <%= form_with(model: @memo, class: "contents") do |form| %>
      <%= render "memos/editor_form",
      form: form,
      memo: @memo,
      initial_yjs_state: @initial_yjs_state %>
    <% end %>
  </div>
</div>
