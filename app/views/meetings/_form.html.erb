<%= form_with(model: meeting, class: "space-y-4") do |form| %>
  <% if meeting.errors.any? %>
    <div class="alert alert-error">
      <div>
        <h2 class="font-bold"><%= pluralize(meeting.errors.count, "error") %>
          prohibited this meeting from being saved:</h2>
        <ul class="list-disc ml-6 mt-2">
          <% meeting.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-control">
    <%= form.label :title, class: "label" %>
    <%= form.text_field :title, class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
