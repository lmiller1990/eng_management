<% content_for :title, "Meetings" %>

<div class="w-full">
  <% if notice.present? %>
    <div class="alert alert-success mb-5">
      <span><%= notice %></span>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold">Meetings</h1>
    <%= link_to "New meeting", new_meeting_path, class: "btn btn-primary" %>
  </div>

  <div id="meetings" class="space-y-4">
    <% if @meetings.any? %>
      <% @meetings.each do |meeting| %>
        <div class="card bg-base-100 shadow">
          <div class="card-body">
            <div
              class="
                flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4
              "
            >
              <%= render meeting %>
              <div class="flex flex-wrap gap-2">
                <%= link_to "Show", meeting, class: "btn btn-sm btn-ghost" %>
                <%= link_to "Edit", edit_meeting_path(meeting), class: "btn btn-sm btn-ghost" %>
                <%= button_to "Destroy",
                meeting,
                method: :delete,
                class: "btn btn-sm btn-error",
                data: {
                  turbo_confirm: "Are you sure?",
                } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-10">
        <p>No meetings found.</p>
      </div>
    <% end %>
  </div>
</div>
