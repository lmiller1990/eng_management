<% content_for :title, "Notes for Meeting" %>

<div class="w-full">
  <% if notice.present? %>
    <div class="alert alert-success mb-5">
      <span><%= notice %></span>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold">Notes for Meeting #<%= @meeting.id %></h1>
    <%= link_to "New note", new_meeting_note_path(@meeting), class: "btn btn-primary" %>
  </div>

  <div id="notes" class="space-y-4">
    <% if @notes.any? %>
      <% @notes.each do |note| %>
        <div class="card bg-base-100 shadow">
          <div class="card-body">
            <div class="flex justify-between items-start mb-2">
              <span class="text-sm opacity-60"><%= note.created_at.strftime("%B %d, %Y") %></span>
              <div class="flex gap-2">
                <%= link_to "Edit", edit_meeting_note_path(@meeting, note), class: "btn btn-sm btn-ghost" %>
                <%= button_to "Delete", meeting_note_path(@meeting, note), method: :delete,
                    class: "btn btn-sm btn-error",
                    data: { turbo_confirm: "Are you sure?" } %>
              </div>
            </div>
            <p class="whitespace-pre-wrap"><%= note.content %></p>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-10">
        <p>No notes found for this meeting.</p>
      </div>
    <% end %>
  </div>

  <%= link_to "Back to meeting", @meeting, class: "btn btn-ghost mt-6" %>
</div>
