<div class="max-w-md mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-4">Set Your Password</h1>

  <p class="mb-4">
    You've been invited to edit the memo "<strong><%= @invitation.memo.title %></strong>". Please set a password to complete your account setup.
  </p>

  <% if @error %>
    <div
      class="
        bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4
      "
    >
      <%= @error %>
    </div>
  <% end %>

  <%= form_with url: complete_setup_memo_invitation_path(token: @invitation.token), method: :post do |f| %>
    <div class="mb-4">
      <%= label_tag :password, "Password", class: "block font-medium mb-2" %>
      <%= password_field_tag :password,
                             "",
                             class: "border rounded px-3 py-2 w-full",
                             required: true %>
      <p class="text-sm text-gray-600 mt-1">Minimum 8 characters</p>
    </div>

    <div class="mb-4">
      <%= label_tag :password_confirmation,
                    "Confirm Password",
                    class: "block font-medium mb-2" %>
      <%= password_field_tag :password_confirmation,
                             "",
                             class: "border rounded px-3 py-2 w-full",
                             required: true %>
    </div>

    <div class="mb-4">
      <%= check_box_tag :remember, "1", false, class: "mr-2" %>
      <%= label_tag :remember, "Remember me" %>
    </div>

    <%= f.submit "Create Account & Join Memo",
                 class: "bg-blue-600 text-white px-6 py-3 rounded w-full hover:bg-blue-700" %>
  <% end %>
</div>
