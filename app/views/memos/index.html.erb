<% content_for :title, "Memos" %>

<div
  class="w-full"
  data-controller="keyboard-shortcuts"
  data-keyboard-shortcuts-page-value="memos-index"
>
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-3xl">Your Memos</h1>
    <%= link_to "New memo", new_memo_path, class: "btn btn-sm btn-primary" %>
  </div>

  <div id="memos" class="overflow-x-auto">
    <% if @memos.any? %>
      <table class="table" data-controller="memos-table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Created</th>
            <th>Last Updated</th>
            <th>Owner</th>
            <th>Editors</th>
          </tr>
        </thead>
        <tbody>
          <% @memos.each_with_index do |memo, index| %>
            <tr
              tabindex="0"
              data-index="<%= index %>"
              data-url="<%= edit_memo_path(memo) %>"
            >
              <th><%= index + 1 %></th>
              <td><a href="<%= edit_memo_path(memo) %>" class="link"><%= memo.title.presence || "Untitled" %></a></td>
              <td><%= time_ago_in_words(memo.created_at) %>
                ago</td>
              <td><%= time_ago_in_words(memo.updated_at) %>
                ago</td>
              <td><%= memo.owner.derive_name.full_name %></td>
              <td>

                <% memo.editors.each do |editor| %>
                  <div
                    tabindex="0"
                    role="button"
                    class="btn btn-circle btn-xs tooltip tooltip-top"
                    data-tip="<%= editor.derive_name.full_name %>"
                  >
                    <%= editor.derive_name.initials %>
                  </div>
                <% end %>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center my-10">No memos found.</p>
    <% end %>
  </div>
</div>
