<%= form_with(model: memo, class: "contents") do |form| %>
  <% if memo.errors.any? %>
    <div
      id="error_explanation"
      class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3"
    >
      <h2><%= pluralize(memo.errors.count, "error") %>
        prohibited this memo from being saved:</h2>

      <ul class="list-disc ml-6">
        <% memo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.hidden_field :content, id: "memo_content" %>
    <div id="tiptap-editor"
         class="<%= memo.errors[:content].any? ? 'tiptap-error' : '' %>"
         data-has-errors="<%= memo.errors[:content].any? %>"
         data-document-id="memo_<%= memo.id || 'new' %>">
    </div>
  </div>

  <div class="inline">
    <%= form.submit class:
                  "btn btn-sm" %>
  </div>


<% end %>

<script type="module">
import { Editor } from 'https://esm.sh/@tiptap/core@3.13.0'
import StarterKit from 'https://esm.sh/@tiptap/starter-kit@3.13.0'
import { ListItem } from 'https://esm.sh/@tiptap/extension-list-item@3.13.0'
import { Color } from 'https://esm.sh/@tiptap/extension-color@3.13.0'
import { TextStyle } from 'https://esm.sh/@tiptap/extension-text-style@3.13.0'
import { Collaboration } from 'https://esm.sh/@tiptap/extension-collaboration@3.13.0'
import * as Y from 'https://esm.sh/yjs@13.6.27'
import {WebsocketProvider} from "@y-rb/actioncable";
import { createConsumer } from "@rails/actioncable";

const ydoc = new Y.Doc()
const consumer = createConsumer();

const provider = new WebsocketProvider(
  ydoc,
  consumer,
  "SyncChannel",
  {id: "1"}
);

const hiddenField = document.querySelector("#memo_content")
const editorElement = document.querySelector("#tiptap-editor")
const documentId = editorElement.dataset.documentId

console.log('[Collab] Initializing collaboration for document:', documentId)

// Create Y.js document
console.log('[Collab] Y.js document created')


// Log provider status events
provider.on('status', (event) => {
  console.log('[Collab] Status changed:', event.status)
})

provider.on('sync', (isSynced) => {
  console.log('[Collab] Sync status:', isSynced ? 'synced' : 'syncing')
})

// Log Y.js document updates
ydoc.on('update', (update) => {
  console.log('[Collab] Y.js document updated, size:', update.length, 'bytes')
})

console.log('[Collab] ActionCable provider initialized')

const existingContent = `
<h2>
Hi there,
</h2>
<p>
this is a
<em>basic</em>
example of
<strong>Tiptap</strong>. Sure, there are all kind of basic text styles you'd probably expect
from a text editor. But wait until you see the lists:
</p>
<ul>
<li>
  That's a bullet list with one ‚Ä¶
</li>
<li>
  ‚Ä¶ or two list items.
</li>
</ul>
<p>
Isn't that great? And all of that is editable. But wait, there's more.
Let's try a code block:
</p>
<pre><code class="language-css">body { display: none; }</code></pre>
<p>
I know, I know, this is impressive. It's only the tip of the iceberg
though. Give it a try and click a little bit around. Don't forget to
check the other examples too.
</p>
<blockquote>
Wow, that's amazing. Good work, boy! üëè
<br/>
‚Äî Mom
</blockquote>
`

const editor = new Editor({
  element: editorElement,
  extensions: [
    Color.configure({ types: [TextStyle.name, ListItem.name] }),
    TextStyle.configure({ types: [ListItem.name] }),
    StarterKit.configure({
      history: false, // Disable TipTap's history, Y.js handles it
    }),
    Collaboration.configure({
      document: ydoc,
    }),
  ],
  content: existingContent,
  onUpdate: ({ editor }) => {
    console.log('[Collab] Editor updated')
    // Sync content back to hidden field whenever it changes
    hiddenField.value = editor.getHTML()
  },
  onCreate: () => {
    console.log('[Collab] Editor created and ready')
  }
})

// Log ActionCable connection events
cable.subscriptions.subscriptions.forEach((subscription) => {
  console.log('[Collab] ActionCable subscription:', subscription.identifier)
})

// Also sync on form submit to ensure we have the latest content
const form = hiddenField.closest('form')
form.addEventListener('submit', () => {
  console.log('[Collab] Form submitting, saving content')
  hiddenField.value = editor.getHTML()
})
</script>



