<% content_for :title, "Editing memo" %>

<%= javascript_include_tag "memos/edit",
"data-turbo-track": "reload",
type: "module" %>

<%= button_to "Destroy",
@memo,
method: :delete,
class: "btn btn-error btn-xs",
data: {
  turbo_confirm: "Are you sure?",
} %>

<div class="w-full flex flex-col items-center">

  <%= form_with(model: @memo, class: "contents") do |form| %>
    <% if @memo.errors.any? %>
      <div
        id="error_explanation"
        class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3"
      >
        <h2><%= pluralize(@memo.errors.count, "error") %>
          prohibited this memo from being saved:</h2>

        <ul class="list-disc ml-6">
          <% @memo.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="max-w-lg w-full">
      <div class="my-5">
        <%= form.text_field :title,
                        type: "text",
                        id: "memo_title",
                        placeholder: "Title...",
                        autofocus: true,
                        class: "input mb-4 w-full" %>
        <%= form.hidden_field :content, id: "memo_content" %>
        <div
          id="tiptap-editor"
          class="<%= @memo.errors[:content].any? ? 'tiptap-error' : '' %>"
          data-has-errors="<%= @memo.errors[:content].any? %>"
          data-memo-id="<%= @memo.id %>"
          data-initial-state="<%= @initial_yjs_state || '' %>"
        >
        </div>
      </div>
    </div>

    <div class="inline">
      <%= form.submit class: "btn btn-sm" %>
    </div>

  <% end %>

</div>

<style>
@scope (.tiptap) {
  :first-child {
    margin-top: 0;
  }

  /* List styles */
  ul,
  ol {
    list-style-type: disc;
    padding: 0 1rem;
    margin: 1.25rem 1rem 1.25rem 0.4rem;

    li p {
      margin-top: 0.25em;
      margin-bottom: 0.25em;
    }
  }

  /* Heading styles */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    line-height: 1.1;
    margin-top: 2.5rem;
    text-wrap: pretty;
  }

  h1,
  h2 {
    margin-top: 3.5rem;
    margin-bottom: 1.5rem;
  }

  h1 {
    font-size: 1.4rem;
  }

  h2 {
    font-size: 1.2rem;
  }

  h3 {
    font-size: 1.1rem;
  }

  h4,
  h5,
  h6 {
    font-size: 1rem;
  }

  pre {
    border-radius: 0.5rem;
    color: black;
    font-family: monospace;
    margin: 1.5rem 0;
    padding: 0.75rem 1rem;
    background-color: #f6f8fa;

    code {
      color: inherit;
      font-size: 0.8rem;
      padding: 0;
    }
  }

  blockquote {
    border-left: 3px solid var(--gray-3);
    margin: 1.5rem 0;
    padding-left: 1rem;
  }

  hr {
    border: none;
    border-top: 1px solid var(--gray-2);
    margin: 2rem 0;
  }


}
   p.is-editor-empty:first-child::before {
    @apply bg-red-400;
    content: attr(data-placeholder);
    float: left;
    height: 0;
    pointer-events: none;
  }
</style>
