<% content_for :title, "Accounts" %>

<div class="w-full">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-3xl">Accounts</h1>
  </div>

  <div id="accounts" class="overflow-x-auto">
    <% if @accounts.any? %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Email</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @accounts.each_with_index do |account, index| %>
            <tr>
              <th><%= index + 1 %></th>
              <td><%= account.email %></td>
              <td>
                <span
                  class="badge <%= account.status == "verified" ? "badge-success" : "badge-warning" %>"
                >
                  <%= account.status %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center my-10">No accounts found.</p>
    <% end %>
  </div>
</div>
